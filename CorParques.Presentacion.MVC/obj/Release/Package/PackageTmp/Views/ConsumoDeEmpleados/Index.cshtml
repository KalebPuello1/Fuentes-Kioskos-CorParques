@model IEnumerable<CorParques.Negocio.Entidades.ConsumoDeEmpleados>

@{
    ViewBag.title = "Consumo De Empleados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/Vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">
<link href="~/Vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" rel="stylesheet">
<link href="~/Vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css" rel="stylesheet">
@section scripts
{
    <script src="~/Scripts/ConsumoDeEmpleados.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.js"></script>
    <script src="~/Vendors/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Vendors/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script src="~/Vendors/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/Vendors/datatables.net-responsive-bs/js/responsive.bootstrap.js"></script>
    <script src="~/Vendors/datatables.net-scroller/js/dataTables.scroller.min.js"></script>
}
<div class="container">
    <div class="container">
        <form class="container row border">
            <div class="item form-group col-md-6 col-sm-6 col-xs-12">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                    Fecha Inicial
                </label>
                <div class="form-group col-md-6 col-sm-6 col-xs-12">
                    <div class='input-group date' id='datetimepickerIni'>
                        <input type='text' class="form-control fecha required" type="date" id="FInicial"/>
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
            <div class="item form-group col-md-6 col-sm-6 col-xs-12">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                    Fecha Final
                </label>
                <div class="form-group col-md-6 col-sm-6 col-xs-12">
                    <div class='input-group date' id='datetimepickerfin'>
                        <input type='text' class="form-control fecha required" type="date" id="FFinal"/>
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
            <div class="item form-group col-md-6 col-sm-6 col-xs-12">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                    Numero Documento
                </label>
                <div class="form-group col-md-6 col-sm-6 col-xs-12">
                    <div class="input-group col-md-12">
                        <!--onkeydown="return NumeroYCaracterEspecial(this);" onkeydown="return Number(this);" type="text" -->
                        <input class="numerico form-control col-md-12" min="000000" max="1000000000000" id="NDocumento" />
                        <!-- <span class="input-group-addon">
        <span class="fa fa-cc"></span>
    </span> -->
                    </div>
                </div>
            </div>

            <div class="item form-group col-md-6 col-sm-6 col-xs-12">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                    Empresa
                </label>
                    <div class="form-group col-md-6 col-sm-6 col-xs-12">
                        <div class="input-group col-md-12">
                            <select class="col-md-12 form-control setSelect2" id="area" name="Area">
                                <option selected>Seleccionar empresa....</option>
                                @foreach (var f in ViewBag.empresas)
                                {
                                    <option>@f.Area</option>
                                }
                            </select>
                            <!-- <span class="input-group-addon">
         <span class="fa fa-institution"></span>
     </span> -->
                        </div>
                </div>
                    </div>
            <div class="form-group col-md-12 col-sm-12 col-xs-12" style="text-align:right; margin-top:20px;">
                <button class="btn btn-success" color:white;" id="exportar">Exportar datos</button>
            </div>
</form>
    </div>
    <div class="container">
        @if (Model != null)
        {
            @Html.Partial("_List")
        }
    </div>
    <a style="display: none; background-color: #5e2d4f; color: white; text-align:center" class="btn" id="desc">Descargar</a>
</div>