@model CorParques.Negocio.Entidades.Procedimiento

@{
    ViewBag.Title = "Reporte Primeros Auxilios";
    ViewBag.SubTitle = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/Vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">
<link href="~/Vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" rel="stylesheet">
<link href="~/Vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css" rel="stylesheet">
<div class="x_content" id="div_principal">
    <form id="frmPrint">
        <div class="form-horizontal form-label-left">
            <div class="row">
                <div class="item form-group col-md-6 col-sm-6 col-xs-12">
                    <label class="control-label col-md-4 col-sm-3 col-xs-12" for="tipoatencion">
                        Consecutivo<span></span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @Html.TextBoxFor(model => model.IdProcedimiento, new { @class = "form-control col-md-7 col-xs-12", onkeydown = "return EsNumero(this);", maxlength = 10 })
                    </div>
                </div>
                <div class="item form-group col-md-6 col-sm-6 col-xs-12">
                    <label class="control-label col-md-4 col-sm-3 col-xs-12" for="tipoatencion">
                        Tipo documento paciente<span></span>
                    </label>

                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @Html.DropDownListFor(model => model.IdTipoDocumentoPaciente, new SelectList(Model.ListaTipoDocumento, "Id", "Nombre"), "Todos", new { @class = "form-control" })
                    </div>
                </div>
           
            </div>         
            <div class="row">
                <div class="item form-group col-md-6 col-sm-6 col-xs-12">
                    <label class="control-label col-md-4 col-sm-3 col-xs-12" for="tipoatencion">
                        Categoría<span></span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @Html.DropDownListFor(model => model.IdCategoriaAtencion, new SelectList(Model.ListaCategoriaAtencion, "Id", "Nombre"), "Todas", new { @class = "form-control" })
                    </div>
                </div>
                <div class="item form-group col-md-6 col-sm-6 col-xs-12">
                    <label class="control-label col-md-4 col-sm-3 col-xs-12" for="tipoatencion">
                        Tipo de paciente<span></span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @Html.DropDownListFor(model => model.IdTipoPaciente, new SelectList(Model.ListaTipoPaciente, "Id", "Nombre"), "Todos", new { @class = "form-control" })
                    </div>
                </div>            
            </div>
            <div class="row">
                <div class="item form-group col-md-6 col-sm-6 col-xs-12">
                    <label class="control-label col-md-4 col-sm-3 col-xs-12" for="fechainicial">
                        Fecha inicial
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @Html.TextBoxFor(model => model.FechaIncidenteDDMMAAAA, new { @class = "form-control col-md-7 col-xs-12 required calendario", maxlength = 50 })
                    </div>                      
                </div>
                <div class="item form-group col-md-6 col-sm-6 col-xs-12">
                    <label class="control-label col-md-4 col-sm-3 col-xs-12" for="fechafinal">
                        Fecha final
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @Html.TextBoxFor(model => model.FechaIncidenteFinalDDMMAAAA, new { @class = "form-control col-md-7 col-xs-12 required calendario", maxlength = 50 })
                    </div>
                </div>   
            </div>
            <div class="row">
                <div class="item form-group col-md-6 col-sm-6 col-xs-12">
                    <label class="control-label col-md-4 col-sm-3 col-xs-12" for="tipoatencion">
                        Zona / Área<span></span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @Html.DropDownListFor(model => model.IdZonaArea, new SelectList(Model.ListaZonaArea, "Id", "Nombre"), "Todas", new { @class = "form-control" })
                    </div>
                </div>
                <div class="item form-group col-md-6 col-sm-6 col-xs-12">
                    <label class="control-label col-md-4 col-sm-3 col-xs-12" for="tipoatencion">
                        Ubicación<span></span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @Html.DropDownListFor(model => model.IdCentroMedico, new SelectList(Model.ListaUbicacion, "Id", "Nombre"), "Todas", new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="row">
                <label class="control-label col-md-4 col-sm-3 col-xs-12" for="boton">

                </label>
                <div class="item form-group col-md-6 col-sm-6 col-xs-12">
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <input type="button" value="Generar" class="btn btn-success" id="btnGenerarReporte" />
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section scripts{
    <script src="~/Vendors/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Vendors/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script src="~/Vendors/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/Vendors/datatables.net-responsive-bs/js/responsive.bootstrap.js"></script>
    <script src="~/Vendors/datatables.net-scroller/js/dataTables.scroller.min.js"></script>
    <script src="~/Scripts/ReporteCentroMedico.js"></script>
}


