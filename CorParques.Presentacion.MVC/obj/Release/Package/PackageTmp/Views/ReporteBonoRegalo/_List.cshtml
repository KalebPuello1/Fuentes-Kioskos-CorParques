@{
    ViewBag.Title = "Reporte bono regalo";

    var Vendedores = (IEnumerable<CorParques.Negocio.Entidades.TipoGeneral>)ViewBag.Vendedores;
    var Clientes = (IEnumerable<CorParques.Negocio.Entidades.TipoGeneral>)ViewBag.Clientes;

}


<div class="form-group col-md-6 col-sm-6 col-xs-12">
    <label class="control-label col-md-4 col-sm-4 col-xs-4">Fecha Inicial</label>
    <div class="col-md-8 col-sm-8 col-xs-8">
        <div class="input-group date" id="datetimepickerIni">
            <input type="text" class="form-control FInicial required" id="FInicial">
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
        </div>
    </div>
</div>

<div class="form-group col-md-6 col-sm-6 col-xs-12">
    <label class="control-label col-md-4 col-sm-4 col-xs-4">Fecha Final</label>
    <div class="col-md-8 col-sm-8 col-xs-8">
        <div class="input-group date" id="datetimepickerFin">
            <input type="text" class="form-control FFinnal required" id="FFinal">
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
        </div>
    </div>
</div>

@*#####################################################################################*@



<div class="form-group col-md-6 col-sm-6 col-xs-12">
    <label class="control-label col-md-4 col-sm-4 col-xs-4">Tipo Pedido</label>
    <div class="col-md-8 col-sm-8 col-xs-8">
        <select class="form-control setSelect2" name="IdTipoPedido" id="IdTipoPedido" >
            <option value="">* Seleccione</option>
            <option value="1">Boleta control</option>
            <option value="2">Fiesta</option>
            <option value="3">Adicional</option>

        </select>
    </div>
</div>




<div class="form-group col-md-6 col-sm-6 col-xs-12">
    <label class="control-label col-md-4 col-sm-4 col-xs-4">Cliente</label>
    <div class="col-md-8 col-sm-8 col-xs-8">
        <select class="form-control setSelect2" name="IdCliente" id="IdCliente">
            <option value="">* Seleccione</option>
            @foreach (var item in Clientes)
            {
                <option value="@item.CodSAP">@string.Concat(item.Nombre) </option>
            }

        </select>
    </div>
</div>




@*#######################################################################################*@


<div class="form-group col-md-6 col-sm-6 col-xs-12">
    <label class="control-label col-md-4 col-sm-4 col-xs-4">No. Pedido</label>
    <div class="col-md-8 col-sm-8 col-xs-8">
       <input class="form-control" id="txtcodPedido" name="txtcodPedido" />
    </div>
</div>

<div class="form-group col-md-6 col-sm-6 col-xs-12">
    <label class="control-label col-md-4 col-sm-4 col-xs-4">Asesor</label>
    <div class="col-md-8 col-sm-8 col-xs-8">
        <select class="form-control setSelect2" name="IdResponsable" id="IdResponsable">
            <option value="">* Seleccione</option>
            @foreach (CorParques.Negocio.Entidades.TipoGeneral item in Vendedores)
            {
                <option value="@item.CodSAP">@item.Nombre</option>
            }

        </select>
    </div>
</div>

@*#######################################################################################*@

@*#######################################################################################*@





@*#######################################################################################*@


<div class="form-group col-md-12 col-sm-12 col-xs-12" style="text-align:right; margin-top:20px;">
    <a href="javascript:void(0)" id="btnConsultarRest" class="right btn btn-success">Consultar</a>
    <a href="javascript:void(0)" id="btnLimpiarRest" class="right btn btn-danger">Limpiar</a>
</div>
