@model IEnumerable<CorParques.Negocio.Entidades.CodigoFechaAbierta>



<table id="datatable-responsive" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>
                    Punto *
                </th>
                <th>
                    Atracción / Destreza
                </th>
                <th>
                    Cantidad
                </th>
                <th>
                    Estado
                </th>
                <th style="width:50px"></th>
            </tr>
        </thead>
        <tbody id="put">
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr class="sorting_asc" tabindex="0" aria-controls="datatable-responsive" rowspan="1" colspan="1" aria-sort="ascending" aria-label="
                Punto
            : Activar para ordenar la columna descendente">
                        <td>
                            @item.IdPedidoBoletaControl
                        </td>
                        <td>
                            @item.CodSapPedido
                        </td>
                        <td>
                            @item.FechaInicial
                        </td>
                        <td>
                            @item.Redencion
                        </td>
                        <td style="text-align:center; width:50px">
                            <a class="lnkDetail" data-id="@item.IdPedidoBoletaControl" href="javascript:void(0)"><b class="fa fa-eye"></b></a>
                            <a class="lnkEdit" data-id="@item.IdPedidoBoletaControl" href="javascript:void(0)"><b class="fa fa-pencil-square"></b></a>
                            @if (item.IdPedidoBoletaControl == 1)
                            {
                                <a class="lnkDisable" data-id="@item.IdPedidoBoletaControl" href="javascript:void(0)"><b class="fa fa-times-circle"></b></a>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>

