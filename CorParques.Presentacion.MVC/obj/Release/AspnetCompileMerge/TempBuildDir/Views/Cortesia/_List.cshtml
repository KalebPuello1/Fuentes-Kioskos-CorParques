@model IEnumerable<CorParques.Negocio.Entidades.UsuarioVisitante>

<table id="datatable-responsive" class="table table-striped table-bordered" cellspacing="0" width="100%">

    <thead>
        <tr>
            <th>Nombres</th>
            <th>Tipo Documento</th>
            <th>Numero Documento</th>
            <th>Correo Eléctronico</th>
            <th>Fecha de creación</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
        <tr>
            <td>
                @System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(
                        string.Concat(item.Nombres, " ", item.Apellidos))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoDocumento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroDocumento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            <td>
                @item.FechaCreacion.ToString("dd/MM/yyyy")

            </td>
            <td>
                @(item.Activo ? "Activo" : "Inactivo" )
            </td>
        </tr>
            }
        }

    </tbody>
</table>


