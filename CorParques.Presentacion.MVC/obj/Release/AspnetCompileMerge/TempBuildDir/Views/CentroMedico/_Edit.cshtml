@model CorParques.Negocio.Entidades.CentroMedico
<form>
    <div class="form-horizontal form-label-left">
        @Html.HiddenFor(model => model.IdCentroMedico)
        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                Zona / Área <span>*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <select id="Id" name="Id" class="form-control required col-md-7 col-xs-12" >
                    <option value="">Seleccione...</option>
                    @foreach (var item in ViewBag.Zonas)
                    {
                        <option value="@item.Id" @(item.Nombre==Model.Descripcion?"selected":"")>@item.Nombre</option>
                    }
                </select>
                @Html.HiddenFor(model => model.Descripcion)
            </div>            
        </div>
        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">
                Ubicación <span>*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.TextBoxFor(model => model.Ubicacion, new { @class = "form-control col-md-7 col-xs-12 required", placeholder = "Digite la ubicación", maxlength = "100" })
            </div>
        </div>
        
    </div>
</form>
<script>
    $(function () {
        $("#Id").change(function () {
            $("#Descripcion").val($(this).find("option:selected").text())
        });
    });
</script>

