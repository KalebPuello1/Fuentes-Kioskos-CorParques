@model IEnumerable<CorParques.Negocio.Entidades.ReservaEspacios>

@if (Model != null)
{
    <table id="datatable-responsive" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th style="width:20px"> </th>
                <th>
                    Número Reserva
                </th>
                <th>
                    Nombre Cliente
                </th>
                <th>
                    Hora Inicial
                </th>
                <th>
                    Hora Final
                </th>
                <th>
                    Tipo Espacio
                </th>
                <th>
                    Espacio
                </th>
                <th>
                    Número Pedido
                </th>                
                <th style="width:10px"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align:center; padding-left:15px;">
                            <div class="redondo" style="text-align:center; background-color: @item.ColorTipoReserva;"></div>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdReservaEspacios)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombrePersona)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HoraInicio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HoraFin)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TipoEspacio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Espacio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CodigoSapPedido)
                        </td>                        
                        <td style="text-align:center; width:10px">
                            <a class="lnkDetail" data-id="@item.IdReservaEspacios" href="javascript:void(0)"><b class="fa fa-eye"></b></a>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
}