@model IEnumerable<CorParques.Negocio.Entidades.ReservaEspaciosAuxiliar>

@if (Model != null)
{
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Detalle pedido <small></small></h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <div class="col-md-3 col-sm-4 col-xs-4 font_bold">
                        <p>Cliente</p>
                    </div>
                    <div class="col-md-6 col-sm-3 col-xs-3 font_bold" id="div_nombrecliente">@Model.FirstOrDefault().NombreCliente</div>
                </div>
                <div class="row">
                    <div class="col-md-3 col-sm-4 col-xs-4 font_bold">
                        <p>Vendedor</p>
                    </div>
                    <div class="col-md-6 col-sm-3 col-xs-3 font_bold">
                        @Model.FirstOrDefault().NombreVendedor
                    </div>
                </div>
                <div id="DatosPedido" class="row">
                    <table id="tb_DatosPedido" class="table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th style="padding-left:15px;">
                                    Producto
                                </th>
                                <th>
                                    Cantidad
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td style="padding-left:15px;">
                                            @Html.DisplayFor(modelItem => item.Producto)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Cantidad)
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

}