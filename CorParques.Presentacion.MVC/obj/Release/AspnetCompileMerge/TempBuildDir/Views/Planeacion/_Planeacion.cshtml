@model CorParques.Negocio.Entidades.Planeacion

@if (Model != null)
{
    <div class="x_content" id="div_Planeacion" style="overflow-y:auto; overflow-x:hidden">
        <form id="frmPlaneacion">
            <table class="table table-striped table-bordered" cellspacing="0" style="width:400px !Important; margin-left:auto; margin-right:auto;">
                <thead>
                    <tr>
                        <th width="20px">
                            Fecha Planeación
                        </th>
                        <th width="100px">
                            Valor
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        int intContador = 0;
                        foreach (var item in Model.Planeaciones)
                        {
                            <tr>
                                <td>
                                    @item.FechaPlaneacion.ToString("yyyy/MM/dd")
                                </td>
                                <td>
                                    <input type="hidden" name="Planeaciones[@intContador].IdPlaneacion" value="@item.IdPlaneacion">
                                    <input type="hidden" name="Planeaciones[@intContador].FechaTexto" value="@item.FechaPlaneacion.ToString("yyyy/MM/dd")">
                                    <input type="text" class="form-control decimales" id="Valor_@intContador" maxlength="20" name="Planeaciones[@intContador].ValorTexto" value="@item.ValorTexto" />
                                </td>
                            </tr>
                            intContador++;
                        }
                    }
                </tbody>
            </table>

            <div class="form-horizontal form-label-left">
                <div class="row">
                    <div class="col-md-12" style="text-align:right;">
                        <input type="button" class="right btn btn-success" value="Guardar" id="btnAceptar" />
                        <input type="button" class="right btn btn-danger" value="Cancelar" id="btnCancelar" />
                    </div>
                </div>
            </div>
        </form>
    </div>
}