@model IEnumerable<CorParques.Negocio.Entidades.ConvenioParqueadero>

<table id="datatable-responsive" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>            
            <th>
                Autorización Para
            </th>   
            <th>Área o Empresa</th>
            <th>
                Número Documento
            </th>            
            <th>
                Nombre Propietario
            </th>    
            <th>
                Apellido Propietario
            </th> 
            <th>
                Valida Hasta
            </th>             
            <th>
                Estado
            </th> 
            <th>
                Tipo Vehículo/Placa
            </th>
            <th style="width:50px"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>     
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoConvenio)
                    </td>  
                    <td>
                        @Html.DisplayFor(modelItem => item.Area)
                    </td>                                                   
                    <td>
                        @Html.DisplayFor(modelItem => item.Documento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaVigencia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Placas)
                    </td>
                    <td style="text-align:center; width:50px">                        
                        <a class="lnkDetail" data-id="@item.Id" href="javascript:void(0)"><b class="fa fa-eye"></b></a>
                        <a class="lnkEdit" data-id="@item.Id" href="javascript:void(0)"><b class="fa fa-pencil-square"></b></a>
                        @if (item.IdEstado == 1)
                        {
                            <a class="lnkDisable" data-id="@item.Id" href="javascript:void(0)"><b class="fa fa-times-circle"></b></a>
                        }                         
                    </td>
                </tr>
            }
        }

    </tbody>
</table>