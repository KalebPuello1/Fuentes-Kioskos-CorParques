<link href="~/Vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css" rel="stylesheet">



<div class="form-group col-md-6 col-sm-6 col-xs-12">
    <label class="control-label col-md-4 col-sm-4 col-xs-4">Categoria</label>
    <div class="col-md-8 col-sm-8 col-xs-8">
        <select class="form-control setSelect2" name="IdCategoria" id="IdCategoria" onchange="listarPantallasXcategoria()">
            <option value="">* Seleccione</option>
            @if (CategoriaImagenes != null && CategoriaImagenes.Count() > 0)
            {
                foreach (var item in CategoriaImagenes)
                {
                    <option value="@item.IdCategoria">@item.Nombre</option>
                }
            }
        </select>
    </div>
</div>



<div class="form-group col-md-6 col-sm-6 col-xs-12">
    <!--<label class="control-label col-md-4 col-sm-4 col-xs-4">Punto origen</label>-->
