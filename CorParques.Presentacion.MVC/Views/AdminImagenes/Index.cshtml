@model CorParques.Negocio.Entidades.ImagenAdmin

@{
    ViewBag.Title = "Admin Imagenes";
    ViewBag.SubTitle = "Módulo para administrar imagenes";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var CategoriaImagenes = (IEnumerable<CorParques.Negocio.Entidades.CategoriaImagenes>)ViewBag.CategoriaImagenes;
}
<link href="~/Vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet" />
