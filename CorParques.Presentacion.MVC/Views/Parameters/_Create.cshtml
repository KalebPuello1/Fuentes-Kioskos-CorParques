@model CorParques.Negocio.Entidades.Parametro


<form>
    <div class="form-horizontal form-label-left">
        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                Nombre <span>*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control col-md-7 col-xs-12 required", placeholder = "Digite el nombre del parámetro", maxlength= 150 })
            </div>
        </div>
        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">
                Valor <span>*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.TextAreaFor(model => model.Valor, new { @class = "form-control col-md-7 col-xs-12 required", placeholder = "Digite el valor del parámetro",  maxlength = 1000, rows = "3" })
            </div>
        </div>
    </div>
</form>
