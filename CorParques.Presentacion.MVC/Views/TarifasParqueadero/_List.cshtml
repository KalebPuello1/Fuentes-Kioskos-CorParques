@model IEnumerable<CorParques.Negocio.Entidades.TarifasParqueadero>


<table id="datatable-responsive" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                Nombre Tarifa Parqueadero
            </th>
            <th>
                Tipo Tarifa
            </th>
            <th>
                Tipo Vehículo
            </th>          
            @*<th>
                Cantidad
            </th>*@
            <th>
                Valor
            </th>
            <th>
                Estado
            </th>
            <th style="width:50px"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>                  
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoTarifaParqueadero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoVehiculo)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.Cantidad)
                    </td>*@
                    <td class="formato_moneda">
                        @*<span class="formato_moneda"> @Html.DisplayFor(modelItem => item.Valor)</span>*@
                        @string.Format("{0:C0}", item.Valor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td style="text-align:center; width:50px">
                        <a class="lnkDetail" data-id="@item.Id" href="javascript:void(0)"><b class="fa fa-eye"></b></a>
                        <a class="lnkEdit" data-id="@item.Id" href="javascript:void(0)"><b class="fa fa-pencil-square"></b></a>
                        @if (item.IdEstado == 1)
                        {
                            <a class="lnkDisable" data-id="@item.Id" href="javascript:void(0)"><b class="fa fa-times-circle"></b></a>
                        }                         
                    </td>
                </tr>
            }
        }

    </tbody>
</table>