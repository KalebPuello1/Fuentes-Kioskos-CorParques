@model CorParques.Negocio.Entidades.Puntos

<link href="~/Vendors/dropzone/dist/min/dropzone.min.css" rel="stylesheet" />
<link href="~/Vendors/switchery/dist/switchery.min.css" rel="stylesheet">

<form id="frmCreate">
    <div class="form-horizontal form-label-left">
       
        <div class="row">
            @*<div class="item form-group col-md-6 col-sm-6 col-xs-12">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">
                    Tipo <span>*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.DropDownListFor(model => model.IdTipoPunto, new SelectList(Model.TipoPuntos, "Id", "Nombre"), "Seleccione...", new { @class = "form-control required" })
                </div>
