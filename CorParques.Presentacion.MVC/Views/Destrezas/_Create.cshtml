            <div class="item form-group col-md-6 col-sm-6 col-xs-12">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                    Nombre <span>*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control col-md-7 col-xs-12 required", maxlength = "150", placeholder = "Digite el nombre para la destreza" })
                </div>
            </div>

            <div class="item form-group col-md-6 col-sm-6 col-xs-12">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                    Codigo <span>*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.TextBoxFor(model => model.CodigoPunto, new { @class = "form-control col-md-7 col-xs-12 required", maxlength = "50", placeholder = "Digite el código para la destreza" })
                </div>
            </div>

        </div>
        <div class="row">
            <div class="item form-group col-md-6 col-sm-6 col-xs-12">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                    Descripción <span>*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control col-md-7 col-xs-12 required", placeholder = "Digite una descripción para la atracción", @rows = "5" })
                </div>
            </div>
            <div class="row">
                <div class="item form-group col-md-6 col-sm-6 col-xs-12">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">
                        Imagen <span>*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <div id="dropzoneElement" class="dropzone"></div>
                        @Html.HiddenFor(model => model.Imagen)
                    </div>
                </div>
            </div>

            
            
        </div>
        <div class="row">
            <div class="item form-group col-md-6 col-sm-6 col-xs-12">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                    Hora Inicio <span>*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class='input-group date dateTime'>
                        @Html.TextBoxFor(model => model.HoraInicio, new { @class = "form-control required rango", placeholder = "HH:MM", maxlength = "8", @data_valor = "minTime", @data_comparar = "HoraFin", data_mensaje = "La hora de inicio debe ser menor que la hora final" })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-time"></span>
                        </span>
                    </div>
                </div>
            </div>
            <div class="item form-group col-md-6 col-sm-6 col-xs-12">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                    Hora Fin <span>*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class='input-group date dateTime'>
                        @Html.TextBoxFor(model => model.HoraFin, new { @class = "form-control required rango", placeholder = "HH:MM", @data_valor = "maxTime", @data_comparar = "HoraInicio", data_mensaje = "La hora final debe ser mayor que la hora de inicio" })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-time"></span>
                        </span>
                    </div>
                </div>
            </div>
    
        </div>
        @*<div class="row">
