        <div class="form-horizontal form-label-left">
            <div class="row">
                <div class="item form-group col-md-6 col-sm-6 col-xs-12">
                    <label class="control-label col-md-4 col-sm-3 col-xs-12" for="tipoatencion">
                        Indicador
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @Html.DropDownListFor(model => model.IdIndicador, new SelectList(Model.ListaIndicadores, "Id", "Nombre"), "Seleccione...", new { @class = "form-control required" })
                    </div>
                </div>
                <div class="item form-group col-md-6 col-sm-6 col-xs-12">
                    <label class="control-label col-md-4 col-sm-3 col-xs-12" for="tipoatencion">
                        Fecha
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @Html.TextBoxFor(m => m.FechaTexto, new { @class = "form-control required calendariomesanio", maxlength = 10 })
                    </div>
                </div>
            </div>
            <div class="row">
                <div id="divMostrarPlaneacion"></div>
            </div>
        </div>

