@model CorParques.Negocio.Entidades.Puntos

<form>
        <div class="form-horizontal form-label-left">
            @Html.HiddenFor(model => model.Id)
            <div class="row">
                <div class="item form-group col-md-12 col-sm-12 col-xs-12">
                    <label class="control-label col-md-4 col-sm-4 col-xs-12" for="Nombre">
                        Punto atención
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control col-md-7 col-xs-12", @readonly = true, maxlength = "50" })
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <table id="datatable-responsive" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>
                                Pasaporte
                            </th>
                            <th style="width:50px"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Brazaletes != null)
                        {
                            foreach (var item in Model.Brazaletes)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                    <td style="text-align:center; width:50px">
                                        @if (item.AplicaPunto)
                                        {
                                            <input class="form-check-input" type="checkbox" value="" id="id_@item.IdProducto" name="grpoBrazaletes" data-id="@item.IdProducto" checked />
                                        }
                                        else
                                        {
                                            <input class="form-check-input" type="checkbox" value="" id="id_@item.IdProducto" name="grpoBrazaletes" data-id="@item.IdProducto" />
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </form>

