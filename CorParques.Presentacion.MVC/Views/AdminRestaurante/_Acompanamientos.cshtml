
@model IEnumerable<CorParques.Negocio.Entidades.Producto>
@{

    var AcompaProductosRestaurante = (IEnumerable<CorParques.Negocio.Entidades.Acompanamiento>
        )ViewBag.AcompaProductosRestaurante;
    var TipoAcompaRestaurante = (IEnumerable<CorParques.Negocio.Entidades.TipoAcompanamiento>
       )ViewBag.TipoAcompaRestaurante;


}
<link href="~/Vendors/dropzone/dist/min/dropzone.min.css" rel="stylesheet" />
<link href="~/Vendors/switchery/dist/switchery.min.css" rel="stylesheet">

<form id="frmCreate">
    <div class="form-horizontal form-label-left" style="height:400px; overflow-y:auto; overflow-x: hidden ">


        <fieldset>
            <legend><b> Productos</b></legend>

            <div class="row">
                <table id="tb_Receta" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th style="padding-left:15px;">
                                Id Acompañamiento
                            </th>
                            <th>
                                Nombre
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count() > 0)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td style="padding-left:15px;">
                                        @Html.DisplayFor(modelItem => item.IdProducto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                    <td style="text-align:center; width:50px">
                                        <a class="lnkAgregarAcompaProd" data-id="@item.IdProducto" data-tipoProducto="@item.NombreTipoAcompa" name="@item.Nombre" id="@item.NombreTipoAcompa" href="javascript:void(0)"><b class="fa fa-plus-square"></b></a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </fieldset>
        <div id="listViewProdSele">
            <legend><b>Acompañamientos seleccionados</b></legend>

            <div class="row">
                <table id="tb_Receta" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th style="padding-left:15px;">
                                Id Acompañamiento
                            </th>
                            <th>
                                Tipo
                            </th>
                            <th>
                                Nombre
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (AcompaProductosRestaurante != null && AcompaProductosRestaurante.Count() > 0)
                        {
                            foreach (var item in AcompaProductosRestaurante)
                            {
                        <tr>
                            <td style="padding-left:15px;">
                                @Html.DisplayFor(modelItem => item.IdAcomp)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NombreTipo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td style="text-align:center; width:50px">
                                <a class="gridacompinicial" data-id="@item.IdAcomp" data-tipoProducto="@item.NombreTipo" name="@item.Nombre" id="@item.NombreTipo" href="javascript:void(0)"><b class="fa fa-trash-o"></b></a>
                            </td>
                        </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
     


    </div>
</form>
<script src="~/Vendors/dropzone/dist/min/dropzone.min.js"></script>
<script src="~/Vendors/switchery/dist/switchery.min.js"></script>
<script>
    $(function () {
        setFileLoad(true);
        setEventStatus();
    });
</script>

