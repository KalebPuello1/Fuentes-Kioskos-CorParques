@*@model CorParques.Negocio.Entidades.ReporteFallaAtraccion*@

@{
    ViewBag.Title = "Reporte Entrega Institucional";
    var Clientes = (IEnumerable<CorParques.Negocio.Entidades.TipoGeneral>)ViewBag.Clientes;
    var Productos = (IEnumerable<CorParques.Negocio.Entidades.Producto>)ViewBag.Productos;
    var Asesores = (IEnumerable<CorParques.Negocio.Entidades.TipoGeneral>)ViewBag.Asesores;


}
<div class="x_content">
    <div id="listView">
        <div class="form-group col-md-4 col-sm-4 col-xs-12">
            <label class="control-label col-md-4 col-sm-4 col-xs-4">Fecha Entrega</label>
            <div class="col-md-8 col-sm-8 col-xs-8">
                <div class="input-group date" id="datetimepickerFin">
                    <input type="text" class="form-control required" id="FEntrega">
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>

        <div class="form-group col-md-4 col-sm-4 col-xs-12">
            <label class="control-label col-md-4 col-sm-4 col-xs-4">Fecha Uso</label>
            <div class="col-md-8 col-sm-8 col-xs-8">
                <div class="input-group date" id="datetimepickerIni">
                    <input type="text" class="form-control" id="FUso">
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>

        <div class="form-group col-md-4 col-sm-4 col-xs-12">
            <label class="control-label col-md-4 col-sm-4 col-xs-4">Pedido</label>
            <div class="col-md-8 col-sm-8 col-xs-8">
                <input type="text" class="form-control" id="Pedido">
            </div>
        </div>

        @*########################################################################################################*@

        <div class="form-group col-md-4 col-sm-4 col-xs-12">
            <label class="control-label col-md-4 col-sm-4 col-xs-4">Asesor</label>
            <div class="col-md-8 col-sm-8 col-xs-8">
                <select class="form-control setSelect2" name="idAsesor" id="idAsesor">
                    <option value="null">* Seleccione</option>
                    @foreach (CorParques.Negocio.Entidades.TipoGeneral item in Asesores)
            {
                        <option value="@item.CodSAP">@item.Nombre</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group col-md-4 col-sm-4 col-xs-12">
            <label class="control-label col-md-4 col-sm-4 col-xs-4">Cliente</label>
            <div class="col-md-8 col-sm-8 col-xs-8">
                <select class="form-control setSelect2" name="idCliente" id="idCliente">
                    <option value="null">* Seleccione</option>
                    @foreach (CorParques.Negocio.Entidades.TipoGeneral item in Clientes)
            {
                        <option value="@item.CodSAP">@item.Nombre</option>
                    }
                </select>
            </div>
        </div>


        <div class="form-group col-md-4 col-sm-4 col-xs-12">
            <label class="control-label col-md-4 col-sm-4 col-xs-4">Producto</label>
            <div class="col-md-8 col-sm-8 col-xs-8">
                <select class="form-control setSelect2" name="idProducto" id="idProducto">
                    <option value="null">* Seleccione</option>
                    @foreach (CorParques.Negocio.Entidades.Producto item in Productos)
            {
                        <option value="@item.IdProducto">@item.Nombre</option>
                    }
                </select>
            </div>
        </div>


        <div class="form-group col-md-12 col-sm-12 col-xs-12" style="text-align:right; margin-top:20px;">
            <a href="javascript:void(0)" id="btnConsultar" class="right btn btn-success">Consultar</a>
            <a href="javascript:void(0)" id="btnLimpiar" class="right btn btn-danger">Limpiar</a>
        </div>

    </div>
</div>

@section scripts{
    <script src="~/Scripts/select2.min.js"></script>
    <script src="~/Scripts/daterangepicker.js"></script>
    <script src="~/Scripts/ReporteEntregaInstitucional.js"></script>
}