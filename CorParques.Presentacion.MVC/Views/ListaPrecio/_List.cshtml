@model IEnumerable<CorParques.Negocio.Entidades.ListaPrecio>


<table id="datatable-responsive" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th> Lista </th>
            <th> Valor </th>
            <th> Inicio </th>
            <th> Fin </th>
            <th style="width:50px"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td> @Html.DisplayFor(modelItem => item.Descripcion) </td>
                    <td> @Html.DisplayFor(modelItem => item.ValorTotal) </td>
                    <td> @Html.DisplayFor(modelItem => item.FechaInicioVigencia) </td>
                    <td> @Html.DisplayFor(modelItem => item.FechaFinVigencia) </td>
                    
                    <td style="text-align:center; width:50px">
                        <a class="lnkEdit" data-id="@item.Id" href="javascript:void(0)"><b class="fa fa-pencil-square"></b></a>
                        <a class="lnkDelete" data-id="@item.Id" href="javascript:void(0)"><b class="fa fa-times-circle"></b></a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>