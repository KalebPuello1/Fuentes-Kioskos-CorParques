@model CorParques.Negocio.Entidades.ListaPrecio


<form>
    <div class="form-horizontal form-label-left">
        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                Descripción <span>*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control col-md-7 col-xs-12 required", placeholder = "Digite el nombre descriptivo de la lista", maxlength = "50" })
            </div>
        </div>

        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                Valor Total <span>*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12 ">
                @Html.TextBoxFor(model => model.ValorTotal, new { @class = "form-control col-md-7 col-xs-12 required", placeholder = "Digite el valor total de la lista", maxlength = "9" })
            </div>
        </div>

        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                Fecha Inicio <span>*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12 ">
                <div class="input-group date dateTime col-md-7 col-xs-12">
                    @Html.TextBoxFor(model => model.FechaInicioVigencia, new { @class = "form-control col-md-7 col-xs-12 required calendario rango", placeholder = "Seleccione la fecha de inicio de vigencia", @data_valor = "minTime", @data_comparar = "FechaFinVigencia", data_mensaje = "La fecha de inicio debe ser menor que la fecha final" })
                </div>
            </div>
        </div>
        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                Fecha Fin <span>*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12 ">
                <div class="input-group date dateTime col-md-7 col-xs-12">
                    @Html.TextBoxFor(model => model.FechaFinVigencia, new { @class = "form-control col-md-7 col-xs-12 required calendario rango", placeholder = "Seleccione la fecha fin de vigencia", @data_valor = "maxTime", @data_comparar = "FechaInicioVigencia", data_mensaje = "La fecha final debe ser mayor que la fecha de inicio" })
                </div>
            </div>
        </div>
    </div>
</form>

