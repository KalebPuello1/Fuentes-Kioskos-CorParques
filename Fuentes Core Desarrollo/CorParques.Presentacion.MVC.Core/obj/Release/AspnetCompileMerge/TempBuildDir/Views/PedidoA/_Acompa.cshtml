@model IEnumerable<CorParques.Negocio.Entidades.AcompanamientoXProducto>
    <form>

        <div class="form-horizontal " style="margin-left:5%">
            <div class="row">

                <label for="sel1">Acompañamientos:</label>
                @if (Model != null && Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        if (item.Id_TipoAcomp == 1)
                        {




                            <div class="col" style="margin-left:10%">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input checkAcomp"  value="@item.Nombre" id="@item.IdAcomp">
                                    <label class="form-check-label" for="exampleCheck1"> @item.Nombre </label>
                                </div>

                            </div>
                        }
                    }
                }
            </div>

            <div class="row">
                <label for="sel1">Bebidas:</label>


                @if (Model != null && Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        if (item.Id_TipoAcomp == 2)
                        {


                            <div class="col" style="margin-left:10%">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input checkAcomp" value="@item.Nombre" id="@item.IdAcomp">
                                    <label class="form-check-label" for="exampleCheck1"> @item.Nombre </label>
                                </div>

                            </div>
                        }
                    }
                }

            </div>
            <div class="row">

                <div class="col-md-6">
                    <label for="sel1">Descripción:</label>
                    <textarea class="form-control"></textarea>
                </div>
            </div>

        </div>


