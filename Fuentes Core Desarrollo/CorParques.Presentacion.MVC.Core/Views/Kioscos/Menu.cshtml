@{
    ViewBag.Title = "Menu";
    Layout = "~/Views/Shared/_LayoutKiosco.cshtml";
    var consecutivosBoletas = ViewBag.Consecutivos;
}

<div class="d-flex flex-column justify-content-center text-center mt-4">
    <h2>Seleccione la opci&oacute;n que desea realizar</h2>
</div>

<div class="row mt-5">
    <div class="col-6 d-flex flex-column mt-4">

        <button class="btn-imprimir" @(!ViewBag.ImpresionEnLinea ? "disabled=disabled" : "") onclick="OpcionImprimir()">
            <img src="" alt="">Impresion boletas
        </button>
        <p style="margin:auto">@ViewBag.Mensaje</p>

        <button class="btn-consulta" onclick="OpcionConsultar()">
