
@model CorParques.Negocio.Entidades.UsuarioVisitanteViewModel
@using System.Globalization;
@{
    DateTimeFormatInfo dtinfo = new CultureInfo("es-ES", false).DateTimeFormat;
}

<table id="" class="table table-striped table-bordered" cellspacing="0" width="100%">

    <thead>
        <tr>
            <th>Codigo SAP</th>
            <th>Nombre</th>
            <th>Cantidad</th>

            @if (Model.IdTipoCortesia == 2)
            {
                <th>Estado</th>
                <th>Mes vigencia</th>
                <th>Año Vigencia</th>
                <th>Descrip cortesía</th>
                <th>Consecutivo Boleta</th>
                <th>Fecha Uso</th>
                <th>Sel</th>
            }


            @*<th>Fecha</th>*@

        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            var mesActual = int.Parse(DateTime.Now.ToString("MM")).ToString();

            var añoActual = int.Parse(DateTime.Now.ToString("yyyy")).ToString();

            var meses = Model.ListDetalleCortesia.Where(x => x.Activo == true && x.FechaFinal.Month.ToString() == mesActual).Count();

            var hoy = DateTime.Now.ToShortDateString();

            var ultimaFechaEntrega = Model.ListDetalleCortesia.Where(x => x.FechaEntrega.ToShortDateString() == hoy).Select(x => x.FechaEntrega).FirstOrDefault().ToShortDateString();


            foreach (var item in Model.ListDetalleCortesia)
            {
                <tr>

                @if (item.FechaFinal.Month.ToString() == mesActual && item.FechaFinal.Year.ToString() == añoActual && item.Activo == true && ultimaFechaEntrega != hoy)
                {
                    var ff = item.FechaEntrega.ToShortDateString();
                    <td>
                        @Html.DisplayFor(modelItem => item.CodigoSap)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cantidad)
                    </td>
                    @*<td>
                @item.FechaFinal.ToString("dd/MM/yyyy")
                </td>*@

                    if (Model.IdTipoCortesia == 2)
                    {
                        if (item.Activo == false && item.Aprobacion == false)
                        {

                            <td>REDIMIDO</td>
                        }
                        else if (item.FechaFinal < DateTime.Now)
                        {
                            <td>VENCIDO</td>
                        }
                        else
                        {
                            <td>PENDIENTE</td>
                        }

                        <td>@dtinfo.GetMonthName(item.FechaInicial.Month).ToUpper()</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaInicial.Year)</td>
                        <td>@Html.DisplayFor(modelItem => item.DescripcionBeneficioFAN)</td>

                        if (item.Consecutivo != null)
                        {
                            <td>@Html.DisplayFor(modelItem => item.Consecutivo)</td>
                            <td>@Html.DisplayFor(modelItem => item.FechaEntrega)</td>
                        }
                        else
                        {
                            <td></td>
                            <td></td>
                            if (meses > 1 && item.FechaFinal.Month.ToString() == mesActual)
                            {
                                <td><input type="radio" name="btnSeleccionar" onclick="Seleccionar(@item.IdDetalleCortesia)"></td>
                            }

                        }
                    }

                }
                </tr>
            }
         }

    </tbody>
</table>

