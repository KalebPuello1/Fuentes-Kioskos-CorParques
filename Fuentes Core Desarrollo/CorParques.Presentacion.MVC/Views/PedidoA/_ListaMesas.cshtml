@model IEnumerable<CorParques.Negocio.Entidades.Mesa>

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="input-group">
            <span class="input-group-addon">
                <i class="fa fa-search"></i>
            </span>
            <input type="text" value="" class="form-control txtBuscadorMesas" />
        </div>
    </div>
</div>

<br />

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div style="max-height: 550px; overflow-y: scroll; width: 100%;" class="well well-small">
            @if (Model != null && Model.Count() > 0)
            {


                int Cont = 1; // Dividisiones
                int _cont = 0;
                int _final = Model.Count();

                @Html.Raw("<div class='row' style='padding-top: 5px;'>")
                foreach (var item in Model)
                {
                    var estilo = "";
                    var estado = "";
                    switch (item.Estado)
                    {
                        case 1:
                            estilo = "border:3px solid #f9ee10e3 !important;margin:4px;";
                            estado = "Solicitud pedido";
                            break;
                        case 2:
                            estilo = "border:3px solid #F2B33D !important;margin:4px;";
                            estado = "Preparación en cocina";
                            break;
                        case 3:
                            estilo = "border:3px solid #A4B169 !important;margin:4px;";
                            estado = "Preparado";
                            break;
                        case 4:
                            estilo = "margin:4px;";
                            estado = "Entregado a cliente";
                            break;
                        default:
                            break;
                    }

                    var Row = Cont == 1;
                    @*if (Row)
                        {
                            @Html.Raw("<div class='row row-eq-height' style='padding-top: 5px;'>")
                        }*@

                    if (item.EstadoMesa == 1)
                    {

                   
                    <div class="col-md-2 col-sm-4 col-xs-12 ProductoGrillaMesas MesasBusq" style="@estilo" data-id="@item.Id" data-nombre="@item.Nombre" data-toggle="tooltip" title="@item.Id-@item.Nombre">
                        <a>

                            <div class="MenuTiposProducto" style="height: 70px;">
                                <div class="icon" style="left: 18px;height: 70px;"><i class="fa fa-picture-o"></i></div>
                            </div>

                            <label>@item.Nombre - <span style="color:darkcyan">@item.NombreM @item.Apellido</span></label>

                            <h6 class="">Activa</h6>
                            <label>@estado</label>
                            @if (item.NombreCliente != null && item.NombreCliente != string.Empty)
                            {
                                <br />
                                <label>Cliente- <span style="color:chocolate">@item.NombreCliente</span></label>

                            }
                        </a>
                        <div class="DescripcionProd">
                            <div style="visibility:hidden"># @item.Id</div>
                        </div>
                    </div>
                    }

                    @*if (Cont < 3)
                        {
                            Cont++;
                            if (_cont + 1 == _final)
                            {
                                @Html.Raw("</div>")
                            }
                        }
                        else
                        {
                            Cont = 1;
                            @Html.Raw("</div>")
                        }

                        _cont++;*@
                }

                @Html.Raw("</div>")
            }
        </div>
    </div>
</div>
