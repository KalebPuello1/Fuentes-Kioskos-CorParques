@model CorParques.Negocio.Entidades.MensajesVisual


<form>
    <div class="form-horizontal form-label-left">
        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                Código mensaje <span>*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.TextBoxFor(model => model.Codigo, new { @class = "form-control col-md-7 col-xs-12 required", placeholder = "Digite el codigo", maxlength = 150 })
            </div>
        </div>
        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">
                Texto <span>*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.TextAreaFor(model => model.Texto, new { @class = "form-control col-md-7 col-xs-12 required", placeholder = "Digite el texto", maxlength = 1000, rows = "3" })
            </div>
        </div>
        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email2">
                Frecuencia (Seg.)
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.TextBoxFor(model => model.Frecuencia, new { @class = "form-control", onkeydown = "return EsNumero(this);" })
                @*<input id="Frecuencia" name="Frecuencia" class="form-control" type="number" />*@
            </div>
        </div>
    </div>
</form>
