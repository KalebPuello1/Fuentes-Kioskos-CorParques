@model CorParques.Negocio.Entidades.UsuarioExterno

<form>

    <div class="form-horizontal form-label-left">
        <div class="item form-group">

            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Nombre">
                Contraseña:
            </label>

            @*<input type="password" class="form-control required" name="pwd" placeholder="Digíte su contraseña" />*@
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.TextBoxFor(model => model.Password, new { type = "password", @class = "form-control required", @autocomplete = "off", placeholder = "Digíte su contraseña", maxlength = "50" })
                @*<input type="password" class="form-control required" id="Password2" name="Password2" placeholder="Digíte su contraseña" />*@
            </div>

        </div>


        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Nombre">
                Nueva Contraseña:
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.TextBoxFor(model => model.Password2, new { type = "password", name = "CambioClave", @class = "form-control password", @autocomplete = "off", placeholder = "Digíte su nueva contraseña", maxlength = "50" })
                @*<input type="password" class="form-control required" id="Changepwd" name="Changepwd" placeholder="Digíte su nueva contraseña" />*@
            </div>
        </div>
        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Nombre">
                Confirme nueva contraseña:
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.TextBoxFor(model => model.ConfirmPassword2, new {type = "password", @class = "form-control required", @autocomplete = "off", placeholder = "Confirme su nueva contraseña", maxlength = "50" })
                @*<input type="password" class="form-control required" id="ConfirChangepwd" name="ConfirChangepwd" placeholder="Confirme su nueva contraseña" />*@
            </div>
        </div>
    </div>
</form>

