@model IEnumerable<CorParques.Negocio.Entidades.Perfil>

@{
    var perfiles = (IEnumerable<CorParques.Negocio.Entidades.TipoGeneral>)ViewBag.Perfil;
}

<table id="datatable-responsive" class="table table-striped table-bordered" cellspacing="0" width="100%">

    <thead>
        <tr>
            <th>Nombre</th>
            <th>Estado</th>
            <th style="width:50px"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @perfiles.Where(M => M.Id == item.IdEstado).FirstOrDefault().Nombre
                    </td>
                    <td style="text-align:center; width:50px">
                        <a class="lnkEdit" data-id="@item.IdPerfil" href="javascript:void(0)" title="Editar"><b class="fa fa-pencil-square"></b></a>
                        @if (item.IdEstado != (int)CorParques.Transversales.Util.Enumerador.Estados.Inactivo)
                        {
                            <a class="lnkDelete" data-id="@item.IdPerfil" href="javascript:void(0)" title="Inactivar"><b class="fa fa-times-circle"></b></a>
                        }
                        else
                        {
                            <a class="lnkDelete" data-id="@item.IdPerfil" href="javascript:void(0)" title="Inactivar"><b class="fa fa-times-circle"></b></a>
                        }
                        <a class="lnkSegregacion" data-id="@item.IdPerfil" href="javascript:void(0)" title="Perfil"><b class="fa fa-users"></b></a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>



