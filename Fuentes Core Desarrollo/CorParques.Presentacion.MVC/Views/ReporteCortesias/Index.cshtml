@model CorParques.Negocio.Entidades.ReporteCortesiasFiltros

@{
    ViewBag.Title = "Reporte de Cortesías";
    ViewBag.SubTitle = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<link href="~/Vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/Vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">
<link href="~/Vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" rel="stylesheet">
<link href="~/Vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css" rel="stylesheet">


@if (Model != null)
{
   

<form id="frmBusqueda" method="get" action="@Url.Action("ObtenerDatosReporte","ReporteCortesias")">    
    <div class="row">
        <div class="item form-group col-md-6 col-sm-6 col-xs-12">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                Fecha Inicial
            </label>
            <div class="col-md-8 col-sm-8 col-xs-12">
                <div class='input-group date' id='datetimepickerIni'>
                    <input type='text' class="form-control fechaIni required" id="txtFechaInicial" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>

        <div class="item form-group col-md-6 col-sm-6 col-xs-12">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                Fecha Final
            </label>
            <div class="col-md-8 col-sm-8 col-xs-12">
                <div class='input-group date' id='datetimepickerFin'>
                    <input type='text' class="form-control fechaFin required" id="txtFechaFinal" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="item form-group col-md-6 col-sm-6 col-xs-12">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                Documento
            </label>
            <div class="col-md-8 col-sm-8 col-xs-12">
                <input type='text' class="form-control documento required" id="txtDocumento" />
            </div>
        </div>

        <div class="item form-group col-md-6 col-sm-6 col-xs-12">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                Tarjeta FAN
            </label>
            <div class="col-md-8 col-sm-8 col-xs-12">
                <input type='text' class="form-control tarjetaFan required" id="txtTarjetaFan" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="item form-group col-md-6 col-sm-6 col-xs-12">
        </div>

        <div class="item form-group col-md-6 col-sm-6 col-xs-12">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">
            </label>
            <div class="col-md-8 col-sm-8 col-xs-12">
                <div style="text-align:right;">
                    <button type="button" class="right btn btn-success" id="btnBuscar">Consultar</button>
                    <button type="button" class="right btn btn-danger" id="btnLimpiar">Limpiar</button>
                </div>
            </div>
        </div>
    </div>

    <br /><br />
</form>
    <div class="x_content">
        <div id="listview">
            @*@Html.Partial("_list", Model)*@
        </div>
    </div>
    }

    @section scripts{
        <script src="~/Scripts/ReporteCortesias.js"></script>
        <script src="~/Scripts/bootstrap-datetimepicker.js"></script>
        <script src="~/Vendors/datatables.net/js/jquery.dataTables.min.js"></script>
        <script src="~/Vendors/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
        <script src="~/Vendors/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
        <script src="~/Vendors/datatables.net-responsive-bs/js/responsive.bootstrap.js"></script>
        <script src="~/Vendors/datatables.net-scroller/js/dataTables.scroller.min.js"></script>
    }
