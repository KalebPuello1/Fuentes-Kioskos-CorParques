@model IEnumerable<CorParques.Negocio.Entidades.Producto>

<table id="datatable-responsive" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Tipo producto
            </th>
            <th>
                Código SAP
            </th>
            <th>
                Valor
            </th>
           
            <th style="width:50px"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreTipoProdRestaurante)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CodigoSap)
                    </td>
                    <td>
                        @string.Format("{0:C0}", item.Precio)
                    </td>
                  
                    <td style="text-align:center; width:50px">
                        <a class="lnkEditProduRestaurante" data-id="@item.IdProducto" href="javascript:void(0)"><b class="fa fa-pencil-square"></b></a>
                        <a class="lnkGetAcompa" data-id="@item.IdProducto" href="javascript:void(0)" title="Acompañamientos"><b class="fa fa-users"></b></a>
                        @*<a class="lnkDelete" data-id="@item.IdProducto" href="javascript:void(0)"><b class="fa fa-times-circle"></b></a>*@
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
