@model CorParques.Negocio.Entidades.GestionMantenimientoControl


<form>
    <div class="form-horizontal form-label-left">
        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">
                Atracciones <span>*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <select name="IdAtraccion" class="form-control col-md-7 col-xs-12 required" onchange="selectChanged(this.options[this.selectedIndex])">
                    <option value="">Seleccione...</option>
                    @foreach (var item in Model.Atracciones)
                    {
                        <option value="@item.Id">@item.Nombre</option>
                    }
                </select>
            </div>    
        </div>
        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">
                Descripcion <span>*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control col-md-7 col-xs-12 required", placeholder = "Digite una descripción del mantenimiento realizado", maxlength = "500" })
            </div>
        </div>
   
        <div id="listMantenimiento">
            @Html.Partial("_ListMantenimiento")
        </div>
    </div>        
</form>
