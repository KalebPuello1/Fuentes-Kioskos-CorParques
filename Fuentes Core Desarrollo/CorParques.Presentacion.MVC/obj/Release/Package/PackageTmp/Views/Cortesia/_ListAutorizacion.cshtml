
@model IEnumerable<CorParques.Negocio.Entidades.ListaCortesia>

<table id="datatable-responsive" class="table table-striped table-bordered" cellspacing="0" width="100%">

    <thead>
        <tr>
            <th>Id cortesía</th>
            <th>Tipo cortesía</th>
            <th>Tipo Documento</th>
            <th>Numero Documento</th>
            <th>Nombre visitante</th>
            <th>Correo Eléctronico</th>
            <th>Fecha de creación</th>
            <th>Aprobar</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreTipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoDocumento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroDocumento)
            </td>
            <td>
                @System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(
                        string.Concat(item.Nombres, " ", item.Apellidos))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            <td>
                @item.FechaCreacion.ToString("dd/MM/yyyy")

            </td>
            <td>
               
                <a class="lnkAprobarCortesia" data-id="@item.Id" href="javascript:void(0)"><b class="fa fa-pencil-square"></b></a>
            </td>
        </tr>
            }
        }

    </tbody>
</table>


