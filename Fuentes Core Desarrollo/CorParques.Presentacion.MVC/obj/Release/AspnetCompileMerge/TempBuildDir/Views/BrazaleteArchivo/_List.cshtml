@model IEnumerable<CorParques.Negocio.Entidades.Producto>

<table id="datatable-responsive" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                Brazalete
            </th>
            <th>
                Archivo
            </th>
            <th style="width:50px"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @if (item.ArchivoProducto != null)
                        {
                            <a class="lnkDescargar" data-id="@item.IdProducto" data-nombre="@item.ArchivoProducto.Archivo" href="javascript:void(0)">@item.ArchivoProducto.Archivo<b class="fa fa-download"></b></a>
                        }
                    </td>
                    <td style="text-align:center; width:50px">
                        <a class="lnkEdit" data-id="@item.IdProducto" data-nombre="@item.Nombre" href="javascript:void(0)"><b class="fa fa-upload"></b></a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
