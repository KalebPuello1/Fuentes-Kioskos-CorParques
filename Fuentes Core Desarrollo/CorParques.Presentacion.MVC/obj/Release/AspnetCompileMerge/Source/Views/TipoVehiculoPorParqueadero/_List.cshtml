@model IEnumerable<CorParques.Negocio.Entidades.TipoVehiculoPorParqueadero>


<table id="datatable-responsive" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>            
            <th>
                Tipo Vehículo
            </th>       
            <th>
                Espacio Por Vehículo
            </th>
            <th>
                Espacios Reservados
            </th>    
            <th>
                Estado
            </th>    
            <th style="width:50px"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>                    
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoVehiculo)
                    </td>                    
                    <td>
                        @Html.DisplayFor(modelItem => item.EspaciosPorVehiculo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EspaciosReservados)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td style="text-align:center; width:50px">                        
                        <a class="lnkEdit" data-id="@item.IdTipoVehiculoPorParqueadero" href="javascript:void(0)"><b class="fa fa-pencil-square"></b></a>
                        @if (item.IdEstado == 1)
                        {
                            <a class="lnkDisable" data-id="@item.IdTipoVehiculoPorParqueadero" href="javascript:void(0)"><b class="fa fa-times-circle"></b></a>
                        }                         
                    </td>
                </tr>
            }
        }

    </tbody>
</table>