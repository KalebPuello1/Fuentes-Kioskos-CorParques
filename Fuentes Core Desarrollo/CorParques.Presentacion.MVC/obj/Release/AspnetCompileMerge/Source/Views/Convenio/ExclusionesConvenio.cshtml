@model IEnumerable<CorParques.Negocio.Entidades.ExclusionConvenio>
@{
    ViewBag.Title = "Exclusión convenio";
    ViewBag.SubTitle = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form id="frmExclusion">
    <div class="row">
        <div class="col-md-6 col-sm-6 col-xs-12">
            <label>Fecha Inicio</label>
            <input type="text" id="strFechaInicio" class="form-control required calendarioMinimoHoy rangoFechas" maxlength='12' data-valor="FechaInicial" data-comparar="strFechaFin" data-mensaje="Fecha inicio debe ser menor o igual que fecha fin." />
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <label>Fecha Fin</label>
            <input type="text" id="strFechaFin" class="form-control required calendarioMinimoHoy rangoFechas" maxlength=12 data-valor="FechaFinal" data-comparar="strFechaInicio" data-mensaje="Fecha fin debe ser mayor o igual que fecha inicio." />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12 col-sm-10 col-xs-12" style="text-align:right;">
            <input type="button" class="right btn btn-success" value="Adicionar" id="btnAdicionar" />
            <input type="button" class="right btn btn-danger" value="Cancelar" id="btnCancelarExclusion" />
        </div>
    </div>
    <br />
</form>

@if (Model != null && Model.Count() > 0)
{
<div class="col-md-10 col-md-10 col-xs-12">
    <table class='table table-striped jambo_table' width='100%'>
        <thead>
            <tr>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FechaInicio.ToString("dd/MM/yyyy")</td>
                    <td>@item.FechaFin.ToString("dd/MM/yyyy")</td>
                    <td><a href='javascript:void(0)' onclick='eliminarExclusion(@item.Id)'><i class='fa fa-trash' style="font-size: 18px;"></i></a></td>
                </tr>
            }

        </tbody>
    </table>
</div>
}

@section scripts{

    <script src="~/Scripts/Convenio.js"></script>
    <script>
        loadCalendar();
    </script>
}