
@model IEnumerable<CorParques.Negocio.Entidades.Acompanamiento>

<legend><b>Acompañamientos seleccionados</b></legend>

<div class="row">
    <table id="tb_Receta" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th style="padding-left:15px;">
                    Id Acompañamiento
                </th>
                <th>
                    Tipo
                </th>
                <th>
                    Nombre
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td style="padding-left:15px;">
                            @Html.DisplayFor(modelItem => item.IdAcomp)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreTipo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td style="text-align:center; width:50px">
                            <a class="gridacompinicial" data-id="@item.IdAcomp" data-tipoProducto="@item.NombreTipo" name="@item.Nombre" id="@item.NombreTipo" href="javascript:void(0)"><b class="fa fa-trash-o"></b></a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
