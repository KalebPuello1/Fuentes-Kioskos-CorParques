
@{
    ViewBag.Title = "ImprimirBoleta";
    Layout = "~/Views/Shared/_LayoutKiosco.cshtml";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    var consecutivos = ViewBag.Consecutivos;
}

<input type="hidden" id="codigos" value="@consecutivos" />
<label id="cod-generado"></label>
<div class="row">
    <div class="col-7 d-flex flex-column">
        <div class="texto-impresion">
            <p>
                Lorem ipsum dolor sit amet consectetur, adipisicing elit. Quia
                reprehenderit repellendus alias quasi recusandae perspiciatis. Molestias quae necessitatibus
                fugit voluptatibus possimus maiores, hic eos, quia, consectetur animi non? Ex, vel.
            </p>

        </div>
    </div>
    <div class="col-5 d-flex flex-column">
        <div class="brazalete-head">
            Tu brazalete
            <h1 style="text-transform:capitalize;">@ViewBag.nombrePasaporte</h1>
            Lorem ipsum dolor sit, amet consectetur adipisicing elit. Est, cumque.
        </div>
        <div class="brazalete-body justify-content-center text-center">
            Vigencia del producto
            <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Consectetur, itaque!</p>
            Dia mes año
            <p id="fecha"></p>
            <div class="boleta-text"></div>
        </div>
    </div>
</div>
<div class="mt-3 justify-content-center text-center">
    <button class="btn-continuar-imp" onclick="Imprimir()" id="btn-continuar">
        Continuar
    </button>
    <button class="btn-modal mt-2" id="btn-supervisor" onclick="AbrirModalSupervisor()"
            style="height: 70px; width: 300px;" hidden="hidden">
        Supervisor
    </button>
    <button class="btn-continuar-imp mt-2" onclick="Reimprimir()" id="btn-reimpresion" hidden="hidden">
        Reimprmir!
    </button>
</div>


@************************Ventanas Modales***********************@
<div class="modal" tabindex="-1" id="modalSuccess">
    <div class="modal-dialog">
        <div class="modal-content">
            <img src="~/Images/GreenCircle.png" alt="" class="img-modal" />
            <h4>¡Impresion exitosa!</h4>
            <p>
                Lorem ipsum dolor sit amet, consectetur adipisicing elit. Doloremque voluptatibus,
                laboriosam harum culpa quibusdam ducimus hic sapiente cupiditate doloribus natus!
            </p>
            <button class="btn-modal" onclick="RedireccionImprCorrecta()">Cerrar</button>
        </div>
    </div>
</div>

<div class="modal" tabindex="-1" id="modalError">
    <div class="modal-dialog">
        <div class="modal-content ">
            <img src="~/Images/RedCircle.png" alt="" class="img-modal" />
            <h4>¡Ocurri&oacute; un error!</h4>
            <p id="msgError"></p>
            <p>Por favor vuelve a intentarlo, necesitaras la aprobacion de un supervisor.</p>
            <button class="btn-modal" onclick="RedireccionImprError()">Cerrar</button>
        </div>
    </div>
</div>

@section scripts{
    <script>
        var IdSupervisorLogueado = 0;
        n = new Date();
        y = n.getFullYear();
        m = n.getMonth() + 1;
        d = n.getDate();
        document.getElementById("fecha").innerHTML = d + " " + m + " " + y;
    </script>

    <script src="~/Scripts/Kioscos.js"></script>
}