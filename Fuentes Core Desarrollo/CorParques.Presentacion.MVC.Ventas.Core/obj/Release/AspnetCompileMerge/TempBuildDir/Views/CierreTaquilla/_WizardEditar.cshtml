                            <thead>
                                <tr>
                                    <th width="200px">
                                        Tipo
                                    </th>
                                    <th width="200px">
                                        Asignados
                                    </th>
                                    <th width="200px">
                                        Vendidos
                                    </th>
                                    <th width="80px">
                                        En caja
                                    </th>
                                </tr>
