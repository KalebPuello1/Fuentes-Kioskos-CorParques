                                                        <input type="checkbox" id="chkv_@intContador" class="voucher" name="RecoleccionVoucher[@intContador].RevisionTaquillero" value="false" onchange="SeleccionarCheckBox(this, 'voucher');" data-indice="@intContador"/>
