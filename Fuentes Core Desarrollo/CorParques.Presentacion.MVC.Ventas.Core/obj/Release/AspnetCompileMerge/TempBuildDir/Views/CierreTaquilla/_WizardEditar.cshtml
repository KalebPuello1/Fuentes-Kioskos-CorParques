                                                        <input type="checkbox" id="chkd_@intContador" class="documentos" name="RecoleccionDocumentos[@intContador].RevisionTaquillero" value="false" onchange="SeleccionarCheckBox(this, 'documentos');" data-indice="@intContador"/>
