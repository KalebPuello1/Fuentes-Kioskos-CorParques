@model CorParques.Negocio.Entidades.ReservaSkycoaster

<form>
    @Html.HiddenFor(model => model.Consecutivo)
    @Html.HiddenFor(model => model.HoraInicio)
    @Html.HiddenFor(model => model.HoraFin)
    @Html.HiddenFor(model => model.FechaReserva)
    @Html.HiddenFor(model => model.IdTicket)
    @Html.HiddenFor(model => model.IdPunto)
    @Html.HiddenFor(model => model.Capacidad)

    

    <div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <h4> <i class="fa fa-ticket"></i> @Model.Consecutivo </h4>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <i class="fa fa-clock-o"></i><b> Hora Inicio: </b> @Model.HoraInicio
            </div>

            <div class="col-md-6 col-sm-6 col-xs-12">
                <i class="fa fa-clock-o"></i><b> Hora Finalización: </b> @Model.HoraFin
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
               <i class="fa fa-calendar"></i><b> Fecha Reserva: </b>  @Model.FechaReserva.ToString()
            </div>
        </div>
    </div>

   


