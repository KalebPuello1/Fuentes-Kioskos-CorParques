
@{
    ViewBag.Title = "Bloqueo tarjeta recargable";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row form-horizontal form-label-lef" id="frmFidel">
    <div class="col-md-6 col-sm-6 col-xs-12">
        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="IdCategoriaAtencion">
                Documento
            </label>
            <div class="col-md-9 col-sm-9 col-xs-12">
                <input type="text" id="txtDoc" name="Documento" class="form-control required numerico" value="" maxlength="20" />
            </div>
        </div>

        <div class="otherField" style="display:none;">
            <div class="item form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="IdCategoriaAtencion">
                    Nombre
                </label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                    <input type="text" id="txtName" name="Nombre" class="form-control required" value="" disabled="disabled" />
                </div>
            </div>
            <div class="item form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="IdCategoriaAtencion">
                    Correo
                </label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                    <input type="text" id="txtMail" name="Correo" class="form-control required mail" value="" disabled="disabled"/>
                </div>
            </div>
            <div class="item form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="IdCategoriaAtencion">
                    Telefono
                </label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                    <input type="text" id="txtPhone" name="Telefono" class="form-control required numerico" value="" maxlength="10" disabled="disabled" />
                </div>
            </div>
            <div class="item form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="IdCategoriaAtencion">
                    Fecha de Nacimiento
                </label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                    <input type="text" id="txtBirthday" name="FechaNacimiento" class="form-control required calendario" value="" disabled="disabled" />
                </div>
            </div>

            <div class="item form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="IdCategoriaAtencion">
                    Genero
                </label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                    <input type="text" id="txtGender" name="Genero" class="form-control required" value="" disabled="disabled" />
                </div>
            </div>
            <div class="item form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="IdCategoriaAtencion">
                    Fecha ultima recarga
                </label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                    <input type="text" id="txtDate" name="Fecha" class="form-control required" value="" disabled="disabled"/>
                </div>
            </div>
            <div class="item form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="IdCategoriaAtencion">
                    Saldo actual
                </label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                    <input type="text" id="txtReload" name="Recarga" class="form-control required" value="" disabled="disabled"/>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 otherField" style="display:none">
        <img src="#" id="snapshot"></img>
    </div>
    <div class="col-md-12 otherField" style="display:none">
        <input type="hidden" id="hdConsecutivo" value="" />
        <a href="#" id="btnGuardar" class="btn btn-success">Bloquear tarjeta</a>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/BloqueoTarjeta.js"></script>
}


