@model CorParques.Negocio.Entidades.ConsultaCodigodeBarras


<div class="form-group">
    <div style="text-align:left;">
        <div class="x_content h4 txtContador" id="div_AccesosDia"></div>
    </div>
    <div style="text-align:center;">
        <label class="x_content h3">Acerque la boleta al lector de código de barras</label>
        <input type="text" id="txt_CodigoBarras" placeholder="Acerque la boleta al lector de código de barras" autofocus maxlength="20" style="width:0px; height:0px; border:0px; background-color:transparent; top:10000px" />
    </div>
    <div style="position:absolute; right:0; width:150px; top:0;">
        <img src="#" id="snapshot" style="display:none; width:150px;"></img>
