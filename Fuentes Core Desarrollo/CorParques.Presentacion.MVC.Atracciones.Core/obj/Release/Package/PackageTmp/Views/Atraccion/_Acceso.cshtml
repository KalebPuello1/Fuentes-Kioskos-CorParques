    <div class="row">
        <div class="col-centered">
            <div id="div_NoAcceso" style="display: none; text-align:center">
                <img src="~/Images/RedCircle.png" style="max-height:300px" />
            </div>
            <div id="div_Acceso" style="display: none; text-align:center">
                <img src="~/Images/GreenCircle.png" style="max-height:300px" />
            </div>

            <div id="div_Mensaje" style="display:none; text-align:center;" class="x_content h2"></div>

        </div>
    </div>
</div>

