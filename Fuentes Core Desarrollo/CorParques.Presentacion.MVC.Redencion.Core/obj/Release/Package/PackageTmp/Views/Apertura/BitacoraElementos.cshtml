
@{

    ViewBag.SubTitle = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool Apertura = ViewBag.Apertura == null? false: (bool)ViewBag.Apertura;
    var _modeloApertura = (CorParques.Negocio.Entidades.Apertura)ViewBag.modeloApertura;
}

<div class="row">
    <div class="col-md-12">
        @Html.Partial("_DetalleElementos", _modeloApertura)
    </div>
</div>
<br />
<div class="row">
    <div class="col-ms-12" hidden>
        @Html.TextArea("txtObservacion", new { @class = "form-control", placeholder = "Observaciones" })
    </div>
</div>
<br />
<div class="row">
    <div class="col-ms-12" hidden>
        <input type="button" class="btn btn-primary" value="Aceptar" id="btnAceptarBitacora" hidden />
    </div>
</div>


@section Scripts{

    @if (!Apertura)
    {
        <script>
            @Html.Raw("MostrarMensajeRedireccion('Importante', 'El punto de venta no tiene apertura.', 'Home/Index', 'warning');");
        </script>
    }
}
