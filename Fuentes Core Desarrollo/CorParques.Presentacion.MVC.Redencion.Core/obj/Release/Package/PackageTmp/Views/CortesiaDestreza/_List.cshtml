@model IEnumerable<CorParques.Negocio.Entidades.CortesiaDestreza>

<table id="datatable-responsive" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>            
            <th>
                Tipo
            </th>       
            <th>
                Nombre
            </th>
            @*<th>
                Entregadas
            </th>*@                        
            <th>
                Cantidad Disponible
            </th> 
            @*<th>
                Total
            </th>*@ 
            <th style="width:50px"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>     
                    <td>
                        @Html.DisplayFor(modelItem => item.Destreza)
                    </td>               
                    <td>
                        <div id="div_NombreAtraccion_@item.IdProducto">
                            @Html.DisplayFor(modelItem => item.Atraccion)
                        </div>                        
                    </td>                    
                    @*<td>
                        @Html.DisplayFor(modelItem => item.Entregadas)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.PorEntregar)
                    </td>                  
                    @*<td>
                        @Html.DisplayFor(modelItem => item.Total)
                    </td>*@                  
                    <td style="text-align:center; width:50px">   
                        @if (item.PorEntregar > 0)
                        {
                            <a class="lnkGenerarCortesia" data-id="@item.IdProducto" href="javascript:void(0)"><b class="fa fa-barcode"></b></a>
                        }

                        @*<a class="lnkDetail" data-id="@item.IdCortesiaPunto" href="javascript:void(0)"><b class="fa fa-eye"></b></a>
                        <a class="lnkEdit" data-id="@item.IdCortesiaPunto" href="javascript:void(0)"><b class="fa fa-pencil-square"></b></a>
                        @if (item.IdEstado == 1)
                        {
                            <a class="lnkDisable" data-id="@item.IdCortesiaPunto" href="javascript:void(0)"><b class="fa fa-times-circle"></b></a>
                        }*@                         
                    </td>
                </tr>
            }
        }

    </tbody>
</table>