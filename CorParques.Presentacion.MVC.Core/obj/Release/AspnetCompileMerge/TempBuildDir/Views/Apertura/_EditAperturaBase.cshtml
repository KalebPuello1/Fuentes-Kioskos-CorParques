@model CorParques.Negocio.Entidades.Apertura

<form id="frmEditApertura">
    <div class="row ">
        <div class="item form-group col-md-12 col-sm-12 col-xs-12">
            <label class="control-label col-md-1 col-sm-2 col-xs-12" for="fechainicial">
                Fecha:
            </label>
            <div class="col-md-3 col-sm-3 col-xs-12">
                @*<input type="text" class="form-control col-md-7 col-xs-12 required calendario" maxlength="50" onchange="CambioFecha(this);" />*@
                @Html.TextBoxFor(modelItem => Model.FechaString, new { @class = "form-control required calendario15dias CalendarioEditar", maxlength = 50 })
            </div>
        </div>
    </div>
    <div class="row ">
        <div class="item form-group col-md-12 col-sm-12 col-xs-12">
            @*<input type="hidden" id="id" name="id" value="@Model.Id" />
            <input type="hidden" id="idPuntoOrigen" name="idPuntoOrigen" value="@Model.IdPuntoCreado" />*@
            <label class="control-label col-md-1 col-sm-2 col-xs-12" for="Password">
                Punto:
            </label>
            <div class="col-md-3 col-sm-3 col-xs-12">               
                @* @Html.DropDownListFor(model => model.IdPunto, new SelectList(Model.ListaPuntos, "Id", "Nombre", Model.IdEstado), "Seleccione...", new { @class = "form-control required setSelect2", })*@                
                <select id="IdPunto" class="form-control required setSelect2">
                    <option value>Seleccione...</option>
                    @if (Model.ListaPuntos != null)
                    {
                        foreach (var item in Model.ListaPuntos)
                        {
                            <option value="@(item.Id)">@(item.Nombre)</option>
                        }
                    }
                </select>
            </div>
        </div>
    </div>
    <br />
    <div id="listViewContenido">
        @Html.Partial("_EditAperturaBaseDenominacion", Model)
    </div>

    @Html.Hidden("hdListPuntos")

    <div class="row ">
        <div class="item col-md-12 col-sm-12 col-xs-12">
            <label class="control-label col-md-2 col-sm-2 col-xs-2" for="Password">
                Observaciones:
            </label>
            <div class="col-md-10 col-sm-10 col-xs-10">
                @Html.TextAreaFor(modelItem => Model.ObservacionNido, new { @class = "form-control col-md-9 col-sm-9 col-xs-12 limpiar", cols = "20", maxlength = 2000, rows = "3" })
            </div>
        </div>
    </div>
    <br />
    <div style="text-align:right;">
        <a href="javascript:void(0)" id="btnEdtiSave" class="right btn btn-success">Guardar</a>
        <a href="javascript:void(0)" id="btnEdtiCancel" class="right btn btn-danger">Cancelar</a>        
    </div>
</form>

@*<script src="~/Scripts/Apertura.js"></script>
    <script src="~/Scripts/General.js"></script>*@

<script>
    $(function () {
        Inicializar();
    });

</script>