<form id="frmTarjetaRecargable">
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
            <label>Cod tarjeta: </label>
        </div>
        <div class="col-lg-7 col-md-7 col-sm-7 col-xs-12">
            <input type="text" class="form-control required" id="CodTarjeta" placeholder="" maxlength="20" />
        </div>
        <div class="col-md-1 col-sm-1 col-xs-12">
            <a class="EditarRecarga">
                <span class="glyphicon glyphicon-edit" aria-hidden="true" style="font-size: 20px;"></span>
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
            <label>Valor: </label>
        </div>
        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
            <input type="text" class="form-control TipoPago required" id="ValorRecargaTR" placeholder="$" maxlength="10"/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <input type="button" class="btn btn-info" value="Agregar" id="btnAdicionarRecarga" />
        </div>
    </div>
</form>


